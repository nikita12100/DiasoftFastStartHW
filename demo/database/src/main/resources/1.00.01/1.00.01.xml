<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
	
    <property name="autoIncrement" value="false" dbms="postgresql,mssql,oracle"/>
    <property name="autoIncrement" value="true" dbms="h2"/>

    <changeSet id="create-sms-verification-table" author="aleonov">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="sms_verification"/>
            </not>
        </preConditions>

        <createSequence sequenceName="sms_verification_verificationid_seq" startValue="1" incrementBy="1"/>

        <createTable tableName="sms_verification" remarks="Таблица с данными о смс-верификации">
            <column name="verificationid" type="NUMERIC(19,0)" autoIncrement="${autoIncrement}" defaultValueSequenceNext="sms_verification_verificationid_seq" remarks="Уникальный идентификатор смс-верификации">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="processguid" type="VARCHAR(50)" defaultValue=" " remarks="Process GUID">
                <constraints nullable="false"/>
            </column>
            <column name="phonenumber" type="VARCHAR(50)" remarks="Номер телефона" >
                <constraints nullable="false"/>
            </column>
            <column name="secretcode" type="VARCHAR(50)" remarks="Секретный код" >
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)" remarks="Статус верификации" >
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="sms_verification" indexName="k01_sms_verification" unique="true">
            <column name="processguid"/>
        </createIndex>
        <createIndex tableName="sms_verification" indexName="k02_sms_verification" unique="false">
            <column name="secretcode"/>
            <column name="status"/>
        </createIndex>
    </changeSet>
		
</databaseChangeLog>